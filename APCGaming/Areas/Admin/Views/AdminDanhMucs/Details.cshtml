@model APCGaming.Models.DanhMuc

@{
    ViewData["Title"] = "Thông tin danh mục" + Model.TenDanhMuc;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminDanhMucs" asp-action="Index">Danh sách danh mục</a>
            <span class="breadcrumb-item active">Thông tin danh mục</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin danh mục</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.DanhMucId</td>
                    </tr>

                    <tr>
                        <td>Tên danh mục:</td>
                        <td>@Model.TenDanhMuc</td>
                    </tr>
                    <tr>
                        <td>Trạng thái: </td>
                        <td>@Model.TrangThai</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="m-b-15">
            <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminDanhMucs" asp-action="Edit" asp-route-id="@Model.DanhMucId">Edit</a>
        </div>
    </div>
</div>

